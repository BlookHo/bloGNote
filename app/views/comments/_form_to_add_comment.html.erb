<h3>Post a Comment</h3>
<%= form_for [ @article, @comment ] do |f| %>
    <p>
      <%= f.label :name, "Your Name" %>
      <% if @current_user %>
          <%= f.text_field :name, :value => @current_user_name%>
      <% else %>
          <%= f.text_field :name %>
      <% end %>
    </p>
    <p>
      <%= f.label :body, "Your Comment" %><br/>
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.submit 'Submit' %>
    </p>
<% end %>
