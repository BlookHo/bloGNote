<div class='container'>
  <h1>Join my designing and recreative blog!</h1>
  <h2>Share your ideas and explore others. Our mission - to unite people all over the world!</h2>

  <div id="tag_cloud">
    <% tag_cloud Article.tag_counts, %w{s m l} do |tag, css_class| %>
        <%= link_to tag.name, tag_path(tag.name), class: css_class %>
        <!--<p></p>-->
    <% end %>
    <br/>
    <br/>
  </div>

  <% if logged_in? %>
      <div class="logged">
        <%= "Logged in as #{current_user.email}" %>
        <%= link_to 'Read articles', articles_path , class: [:sbtn, :btn]  %>
        <%= link_to "Logout", logout_path, class: [:sbtn, :btn] %>
      </div>

  <% else %>
      <!--Logged out-->
      <%= link_to'Sign up', new_author_path , class: [:sbtn, :btn] %>
      <%= link_to "Login", login_path, class: [:sbtn, :btn] %>
      <%= link_to 'Read articles', articles_path , class: [:sbtn, :btn]  %>
<% end %>


</div>


